extends base

block content
    main.main
        .card-container
            each recipe in recipes
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/recipes/${recipe.image}`, alt=`${recipe.name}`)
                        h3.heading-tertirary
                            span= recipe.name

                    .card__details
                        h4.card__sub-heading= `${recipe.description}`
                        - const stepsInfo = recipe.steps.split(',')
                        each step in stepsInfo
                            p.card__text= step

                    .card__footer
                        each ingredient in recipe.ingredients
                            p 
                                span.card__footer-value= ingredient.name
                                | 
                                span.card__footer-text= ingredient.amount||'Not apply ' + `[${ingredient.measure}]`
